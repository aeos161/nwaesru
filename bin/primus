#!/usr/bin/env ruby
require "thor"
require "pry"
require "./lib/primus.rb"

module Primus
  class Cli < Thor
    def self.exit_on_failure?
      true
    end

    desc "words", "generate n-grams"
    subcommand "words", Primus::Commands::Words

    desc "brute", "brute force attempts"
    subcommand "brute", Primus::Commands::Brute
  end
end

Primus::Cli.start
